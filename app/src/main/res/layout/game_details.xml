<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- GAME TITLE -->
    <TextView
        android:id="@+id/gameTitleTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Title"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <!-- RATING -->
    <TextView
        android:id="@+id/gameRatingTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Rating:"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/gameTitleTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RELEASE DATE -->
    <TextView
        android:id="@+id/gameReleaseDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Release Date:"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/gameRatingTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GENRES -->
    <TextView
        android:id="@+id/genresListTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Genres:"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/gameReleaseDateTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- THEMES -->
    <TextView
        android:id="@+id/themeListTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Themes:"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/genresListTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GAME MODES -->
    <TextView
        android:id="@+id/gameModesTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Game Mode(s):"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/themeListTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PLATFORMS -->
    <TextView
        android:id="@+id/platformListTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Platform(s):"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/gameModesTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OTHER SERVICES -->
    <TextView
        android:id="@+id/otherServicesTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Also Available at:"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/platformListTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GAME LINK -->
    <TextView
        android:id="@+id/gameLinkTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center"
        android:text="https://"
        android:textSize="16sp"
        android:linksClickable="true"
        android:textColorLink="?attr/colorPrimary"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/otherServicesTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TRENDING BADGE -->
    <TextView
        android:id="@+id/trendingView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TRENDING"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/gameLinkTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <WebView
        android:id="@+id/trailerView"
        android:layout_width="325dp"
        android:layout_height="185dp"
        app:layout_constraintTop_toBottomOf="@id/trendingView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DESCRIPTION HEADER -->
    <TextView
        android:id="@+id/descriptionHdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/trailerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- DESCRIPTION -->
    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        android:scrollbars="vertical"
        android:textSize="15sp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/descriptionHdr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BACK BUTTON -->
    <Button
        android:id="@+id/gameBackBtn"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:text="BACK"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ERROR POPUP -->
    <TextView
        android:id="@+id/errorPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is an example of an error!!"
        android:textSize="40sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PROGRESS BAR -->
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:theme="@style/Widget.AppCompat.ProgressBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RADIO GROUP -->
    <RadioGroup
        android:id="@+id/listAdd_RG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/descriptionTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/AddToWL_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Wishlist"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary" />

        <RadioButton
            android:id="@+id/AddToGV_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Game Vault"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
