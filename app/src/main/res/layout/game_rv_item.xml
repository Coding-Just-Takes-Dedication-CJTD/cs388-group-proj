<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="15dp"
    android:paddingBottom="15dp"
    android:layout_marginBottom="15dp"
    android:background="?attr/colorSurface">

    <ImageView
        android:id="@+id/image"
        android:layout_width="90dp"
        android:layout_height="128dp"
        android:layout_marginTop="15dp"
        android:contentDescription="Game Image"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:text="Game Name"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ratingHdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:text="Rating:"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:paddingLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/ratingHdr"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/releaseDateHdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:text="Released:"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/ratingHdr" />

    <TextView
        android:id="@+id/releaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="November 21, 2025"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:paddingLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/releaseDateHdr"
        app:layout_constraintTop_toBottomOf="@id/ratingHdr" />

    <TextView
        android:id="@+id/storySummary"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="This is a summary sentence for the game item."
        android:textStyle="italic"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/releaseDateHdr" />

</androidx.constraintlayout.widget.ConstraintLayout>
