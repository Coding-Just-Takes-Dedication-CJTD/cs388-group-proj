<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/profilePageHdr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Profile"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@email.com"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profilePageHdr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profilePicCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintTop_toBottomOf="@id/currentUserEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80000000"
            android:text="EDIT"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="4dp"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/changeUsernameBtn"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="@android:color/white"
        android:text="Change Username"
        android:textColor="#FF000000"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentUserEmail"
        app:strokeColor="#FF000000"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/changeEmailBtn"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/white"
        android:text="Change Email"
        android:textColor="#FF000000"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeUsernameBtn"
        app:strokeColor="#FF000000"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/changePasswordBtn"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/white"
        android:text="Change Password"
        android:textColor="#FF000000"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeEmailBtn"
        app:strokeColor="#FF000000"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF000000"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changePasswordBtn" />

    <Button
        android:id="@+id/deleteAccountBtn"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:text="Delete Account"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/logoutBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>